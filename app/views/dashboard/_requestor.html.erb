<turbo-stream action="prepend" target="requests">
  <template>
    <turbo-frame id="requestuest_<%= request.id %>" class="">
        <div id="<%= dom_id(request) %>"  class="divide-y divide-gray-200 mb-10 overflow-hidden post rounded-lg bg-white new-post shadow" >
  <div class="px-4 py-5 sm:px-6">
    <!-- Content goes here -->

  <div class="flex space-x-3">
      <div class="flex-none rounded-full bg-green-100/10 p-1 text-green-500 pulse">
          <div class="h-2 w-2 rounded-full bg-current"></div>
        </div>
    <div class="flex-shrink-0">
  <%= link_to request.user.profile,  data: { turbo: false } do %>
        
<% if request.user.profile.avatar.attached? %>
  <%= image_tag url_for(request.user.profile.avatar.variant(resize_to_limit: [100, 100])), class: 'h-6 w-6 flex-none rounded-full bg-gray-800' %>
<% end %>
        <% end %>   
     </div>
    <div class="min-w-0 flex-1">
      <p class="text-sm font-semibold text-gray-900">
      <%= request.user.profile.business_name %>
      </p>
      <p class="text-sm text-gray-500">
        <a href="#" class="hover:underline"><%=  request.created_at %></a>
                <span id="request-<%= request.id %>-bids-count"><%= request.bids.count %> Quotes</span>

      </p>
    </div>
    <div class="flex flex-shrink-0 self-center" data-controller="show-hide" data-action="click@window->show-hide#hide">
         <%#= #status_badge(request) %>
      <div class="relative inline-block text-left">
        <div>
          <button data-action="click->show-hide#toggle" type="button" class="-m-2 flex items-center rounded-full p-2  text-gray-400 hover:text-gray-600" id="menu-0-button" aria-expanded="false" aria-haspopup="true">
            <span class="sr-only">Open options</span>
            <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path d="M10 3a1.5 1.5 0 110 3 1.5 1.5 0 010-3zM10 8.5a1.5 1.5 0 110 3 1.5 1.5 0 010-3zM11.5 15.5a1.5 1.5 0 10-3 0 1.5 1.5 0 003 0z" />
            </svg>
          </button>
        </div>

        <!--
          Dropdown menu, show/hide based on menu state.

          Entering: "transition ease-out duration-100"
            From: "transform opacity-0 scale-95"
            To: "transform opacity-100 scale-100"
          Leaving: "transition ease-in duration-75"
            From: "transform opacity-100 scale-100"
            To: "transform opacity-0 scale-95"
        -->


      <%= render 'dashboard/drop_down', request: request %>
    

  
  <div class="px-4 py-5 sm:p-6 text-gray-500">
    <!-- Content goes here -->
        <p class="truncate"><%= request.description %></p>
  </div>
  <div class="px-4 py-4 sm:px-6">
    <!-- Content goes here -->
    <!-- We use less vertical padding on card footers at all sizes than on headers or body sections -->
    <% bid_submitted_by_user = request.bids.exists?(user_id: current_user.id) %>
      <% if bid_submitted_by_user %>
        <div class="mt-5">
          <ul role="list" class="space-y-6">
            <% bid_by_user = request.bids.find_by(user_id: current_user.id) %>
            <li class="relative flex gap-x-4">
              <div class="relative flex h-6 w-6 flex-none items-center justify-center bg-white">
                <div class="h-1.5 w-1.5 rounded-full bg-gray-100 ring-1 ring-gray-300"></div>
              </div>
              <p class="flex-auto py-0.5 text-xs leading-5 text-gray-500">
                <span class="font-medium text-gray-900">You</span> submitted a quote for <%= number_to_currency(bid_by_user.amount) %> on <%= bid_by_user.created_at.strftime("%B %d, %Y") %>.
              </p>
            </li>
          </ul>
        </div>
      <% else %>
        <% unless request.user == current_user %>
        <div class="mt-5 flex pl-7 space-x-3" data-controller="bid-modal">

          <button type="button" data-action="click->bid-modal#open" data-bid-modal-index="<%= index %>" class="rounded bg-indigo-50 ring-1 ring-indigo-300 px-2 py-1 text-xs font-semibold text-indigo-600 shadow-sm hover:bg-indigo-100" <%= 'disabled' if bid_submitted_by_user %>>
            Quote
          </button>
          <!-- Modal -->
          <div data-bid-modal-target="modal" data-bid-modal-index="<%= index %>" class="fixed inset-0 flex items-center justify-center bg-gray-800 bg-opacity-75 hidden z-50">
            <div class="bg-white rounded-lg overflow-hidden shadow-xl transform transition-all sm:max-w-lg sm:w-full">
              <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                <div class="sm:flex sm:items-start">
                  <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
                    
                    <p class="text-sm text-gray-700">You are entering a quote for: <span class="text-gray-500"><%= request.description %></span></p>
                    <div class="mt-5">
                      <form data-bid-modal-target="form" data-action="submit->bid-modal#submitForm">
                        <input type="hidden" name="request_id" value="<%= request.id %>">
                        <div>
                          <label for="bid_amount" class="block text-xs font-medium text-gray-700">Quote Amount</label>
                          <input type="number" name="amount" id="amount" class="mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" required>
                        </div>
                        <div class="mt-4">
                          <button type="submit" class="rounded bg-indigo-50 ring-1 ring-indigo-300 px-2 py-1 text-xs font-semibold text-indigo-600 shadow-sm hover:bg-indigo-100">
                            Submit Quote
                          </button>
                          <button type="button" data-action="click->bid-modal#close" class="rounded bg-red-400 px-2 py-1 text-xs font-semibold text-white ring-1 ring-inset ring-red-600 shadow-sm hover:bg-red-300">
                            Cancel
                          </button>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <%= button_to 'Decline', request_path(request), method: :delete, data: { confirm: 'Are you sure you want to decline this request?' }, class: 'rounded bg-red-400 px-2 py-1 text-xs font-semibold text-white ring-1 ring-inset ring-red-600 shadow-sm hover:bg-red-300', data: { turbo: false } %>
        </div>
      <% end %>
      <% end %>
  </div>
</div>




    </turbo-frame>
  </template>
</turbo-stream>