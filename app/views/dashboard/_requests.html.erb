<% if requests.empty? %>
 <div class=" flex items-center justify-center h-full w-full border-2 border border-gray-400 p-12 text-center">
  <span class="text-sm font-semibold text-gray-900">It's pretty quiet in here </span>
</div>
<% else %>
<% requests.each_with_index do |req, index| %>
  <% if req.status == 'accepted'  %>
    <%= render partial: 'request_item', locals: { req: req, index: index } %>
  <% else %>
    <div class="mt-10">
    
        <%= render partial: 'other_request_item', locals: { req: req, index: index } %>
      
    </div>
  <% end %>
<% end %>
<% end %>