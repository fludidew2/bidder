<div class="mx-auto max-w-7xl py-5 px-4 sm:px-6 lg:px-8">

  

<% if current_user.buyer? %>
 <div class="border-b border-gray-200 pb-5 sm:flex sm:items-center sm:justify-between">
  <h3 class="text-base font-semibold leading-6 text-gray-900">Your Requests</h3>
  <div class="mt-3 sm:ml-4 sm:mt-0">
      <%= link_to 'Create New Request', new_request_path, class: 'inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600' %>

  </div>
</div>


<% @requests.each do |request| %>
  <div class="rounded-lg mb-5 bg-white shadow">
  <div class="px-4 py-5  sm:p-6">
       <div class="mt-2 max-w-xl text-sm text-gray-500">
  <p><%= status_badge(request) %>  <%= link_to request.description, request_path(request) %></p>
  

      
              <p><%= request.bids.count %> Bids</p>
              </div>

      </div>
  </div>
 <% end %>


<% else %>
  <!-- Other content for different roles -->




    <% winning_requests = @requests.active_for_user(current_user).select { |req| req.bids.any? { |bid| bid.user == current_user && bid.status == 'winning' } } %>
  <% other_requests = @requests.active_for_user(current_user) - winning_requests %>

    <div class="mt-10">
    <h1 class="text-base font-semibold mb-3 leading-6 text-gray-900">Winning Requests</h1>
  
  <% winning_requests.each_with_index do |req, index| %>
<div role="list" class="">
  <div class="relative p-5 bg-white mb-5 rounded-md flex items-center space-x-4 py-4">
    <div class="min-w-0 flex-auto">
      <div class="flex items-center gap-x-3">
        <div class="flex-none rounded-full bg-green-100/10 p-1 text-green-500">
          <div class="h-2 w-2 rounded-full bg-current"></div>
        </div>
              <img src="https://images.unsplash.com/photo-1519244703995-f4e0f30006d5?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt="" class="h-6 w-6 flex-none rounded-full bg-gray-800">

        <h2 class="min-w-0 text-sm font-semibold leading-6 text-gray-600">
          <a href="#" class="flex gap-x-2">
            <span class="truncate"><%= req.user.email %></span>
          </a>
        </h2>
      

      </div>
      <div class="mt-3 flex pl-7 gap-x-2.5 text-sm leading-5 text-gray-500">
        <p class="truncate"><%= req.description %></p>
        <svg viewBox="0 0 2 2" class="h-0.5 w-0.5 flex-none fill-green-300">
          <circle cx="1" cy="1" r="1" />
        </svg>

        </div>
          <div class="mt-5 flex pl-7 space-x-3" data-controller="bid-modal">
            <% invoice = Invoice.find_by(request_id: req.id, bid_id: req.bids.find_by(user_id: current_user.id).id) %>

              <% if invoice %>
  <%= link_to 'View Invoice', invoice_path(invoice), class: 'rounded-md bg-blue-400/10 px-2 py-1 text-xs font-medium text-blue-400 ring-1 ring-inset ring-blue-400/20' %>
<% else %>
  <%= button_to 'Generate Invoice', generate_invoice_path(request_id: req.id, bid_id: req.bids.find_by(user_id: current_user.id).id), method: :post, class: 'rounded-md bg-green-400/10 px-2 py-1 text-xs font-medium text-green-400 ring-1 ring-inset ring-green-400/20' %>
<% end %>

              <button type="button" class="rounded-md bg-purple-400/10 px-2 py-1 text-xs font-medium text-purple-400 ring-1 ring-inset ring-purple-400/20">
              Message Customer
            </button>
        

  
    </div>

    
    
  </div>
  <%= status_badge(req) %>
   

</div>
  <% end %>
  </div>

  <div class="mt-10">
    <h1 class="text-base font-semibold mb-3 leading-6 text-gray-900">Latest Requests</h1>
  <% other_requests.each_with_index do |req, index| %>
<div role="list" class="">
  <div class="relative flex items-center p-5 bg-white rounded-md mb-5  hover:bg-blue-100 cursor-pointer space-x-4 py-4">
    <div class="min-w-0 flex-auto">
      <div class="flex items-center gap-x-3">
        <div class="flex-none rounded-full bg-green-100/10 p-1 text-green-500">
          <div class="h-2 w-2 rounded-full bg-current"></div>
        </div>
              <img src="https://images.unsplash.com/photo-1519244703995-f4e0f30006d5?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt="" class="h-6 w-6 flex-none rounded-full bg-gray-800">

        <h2 class="min-w-0 text-sm font-semibold leading-6 text-gray-600">
          <a href="#" class="flex gap-x-2">
            <span class="truncate"><%= req.user.email %></span>
            
          </a>
        </h2>
      

      </div>
      <div class="mt-3 flex pl-7 gap-x-2.5 text-sm leading-5 text-gray-500">
        <p class="truncate"><%= req.description %></p>
        <svg viewBox="0 0 2 2" class="h-0.5 w-0.5 flex-none fill-green-300">
          <circle cx="1" cy="1" r="1" />
        </svg>

        </div>
       
          <% bid_submitted_by_current_user = req.bids.exists?(user_id: current_user.id) %>
           <% if bid_submitted_by_current_user %>
          


<div class="mt-5">
    <ul role="list" class="space-y-6">
  <% bid_by_current_user = req.bids.find_by(user_id: current_user.id) %>
  
  <li class="relative flex gap-x-4">
    <div class="relative flex h-6 w-6 flex-none items-center justify-center bg-white">
      <div class="h-1.5 w-1.5 rounded-full bg-gray-100 ring-1 ring-gray-300"></div>
    </div>
    <p class="flex-auto py-0.5 text-xs leading-5 text-gray-500">
      <span class="font-medium text-gray-900">You</span> submitted a bid of <%= number_to_currency(bid_by_current_user.amount) %> on <%= bid_by_current_user.created_at.strftime("%B %d, %Y") %>.
    </p>
  </li>

  </ul>
     
    </div>




    <% else %>
   <div class="mt-5 flex pl-7 space-x-3" data-controller="bid-modal">
      <button type="button" data-action="click->bid-modal#open" data-bid-modal-index="<%= index %>" class="rounded-md bg-green-400/10 px-2 py-1 text-xs font-medium text-green-400 ring-1 ring-inset ring-green-400/20" <%= 'disabled' if bid_submitted_by_current_user %>>
              Bid
            </button>
              <!-- Modal -->
            <div data-bid-modal-target="modal" data-bid-modal-index="<%= index %>" class="fixed inset-0 flex items-center justify-center bg-gray-800 bg-opacity-75 hidden z-50">
              <div class="bg-white rounded-lg overflow-hidden shadow-xl transform transition-all sm:max-w-lg sm:w-full">
                <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                  <div class="sm:flex sm:items-start">
                    <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
                      <h3 class="text-lg leading-6 font-medium text-gray-600" id="modal-title">
                        Enter Bid Amount
                      </h3>
                      <p class="text-sm">You are entering a bid for: <%= req.description %></p>
                      <div class="mt-2">
                        <form data-bid-modal-target="form" data-action="submit->bid-modal#submitForm">
                          <input type="hidden" name="request_id" value="<%= req.id %>">
                          <div>
                            <label for="bid_amount" class="block text-sm font-medium text-gray-700">Bid Amount</label>
                            <input type="number" name="amount" id="amount" class="mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" required>
                          </div>
                          <div class="mt-4">
                            <button type="submit" class="rounded-md bg-green-400/10 px-2 py-1 text-xs font-medium text-green-400 ring-1 ring-inset ring-green-400/20">
                              Submit Bid
                            </button>
                            <button type="button" data-action="click->bid-modal#close" class="rounded-md bg-pink-400/10 px-2 py-1 text-xs font-medium text-pink-400 ring-1 ring-inset ring-pink-400/20">
                              Cancel
                            </button>
                          </div>
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
        
            <%= button_to 'Decline', request_path(req), method: :delete, data: { confirm: 'Are you sure you want to decline this request?' }, class: 'rounded-md bg-pink-400/10 px-2 py-1 text-xs font-medium text-pink-400 ring-1 ring-inset ring-pink-400/20' %>

  
    </div>
<!--activitylist-->
  

      <% end %>
    
  </div>
  <%= status_badge(req) %>

  
   

</div>


  <% end %>
  </div>
  
<% end %>


