<div role="list" class="">
  <div class="relative p-5 bg-white mb-5 rounded-md flex items-center space-x-4 py-4">
    <div class="min-w-0 flex-auto">
      <div class="flex items-center gap-x-3">
        <div class="flex-none rounded-full bg-purple-100/10 p-1 text-purple-500">
          <div class="h-2 w-2 rounded-full bg-current"></div>
        </div>


      <%=  link_to request.user.profile, data: { turbo: false }  do %>
        <% if request.user.profile.avatar.attached? %>
          <%= image_tag request.user.profile.avatar.variant(resize_to_limit: [100, 100]), class: 'h-6 w-6 flex-none rounded-full bg-gray-800' %>
        <% end %>
        <% end %>

        <h2 class="min-w-0 text-sm font-semibold leading-6 text-gray-600">
          <a href="#" class="flex gap-x-2">
            <span class="truncate"><%= request.user.profile.business_name %></span>
          </a>
        </h2>
      </div>
      <div class="mt-3 flex pl-7 gap-x-2.5 text-sm leading-5 text-gray-500">
        <p class="truncate"><%= request.description %></p>
        <svg viewBox="0 0 2 2" class="h-0.5 w-0.5 flex-none fill-green-300">
          <circle cx="1" cy="1" r="1" />
        </svg>
      </div>
      <div class="mt-5 flex pl-7 space-x-3" data-controller="bid-modal">
        <% invoice = Invoice.find_by(request_id: request.id, bid_id: request.bids.find_by(user_id: current_user.id).id) %>
        <% if invoice %>
          <%= link_to 'View Invoice', invoice_path(invoice), class: 'rounded-md bg-blue-400/10 px-2 py-1 text-xs font-medium text-blue-400 ring-1 ring-inset ring-blue-400/20', data: { turbo: false } %>
        <% else %>
          <%= button_to 'Generate Invoice', generate_invoice_path(request_id: request.id, bid_id: request.bids.find_by(user_id: current_user.id).id), method: :post, class: 'rounded-md bg-green-400/10 px-2 py-1 text-xs font-medium text-green-400 ring-1 ring-inset ring-green-400/20', data: { turbo: false } %>
        <% end %>
        <button type="button" class="rounded-md bg-purple-400/10 px-2 py-1 text-xs font-medium text-purple-400 ring-1 ring-inset ring-purple-400/20">
          Message Customer
        </button>
      </div>
    </div>
    <%= status_badge(request) %>
  </div>
</div>